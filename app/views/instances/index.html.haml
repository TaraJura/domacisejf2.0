#instances.flex 
  - @instances.each do |instance|
    .div{style:"margin: 10px; padding: 10px; border: 1px solid black; border-radius: 10px; text-align: center; background-color: #f2f2f2; width: 200px;"}
      %p
        = instance.created_at.strftime("%d.%m.%Y %H:%M")
      %hr
      = link_to instance.files.filename, rails_blob_path(instance.files, disposition: "attachment")
      = button_to "Smazat", instance, method: :delete, class: "btn btn-danger", data: { turbo: false }
